{
  "name": "@repo/console-api",
  "version": "0.0.0",
  "author": "Ruslan Khatoiev <r.hatoev@gmail.com>",
  "private": true,
  "license": "Proprietary",
  "scripts": {
    "build": "nest build",
    "check-types": "tsc -p tsconfig.json --noEmit",
    "clean": "rimraf dist *.tsbuildinfo",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "pnpm run start:dev",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "pnpm format",
      "pnpm lint"
    ],
    "test/**/*.{ts,tsx}": [
      "pnpm format",
      "pnpm lint"
    ]
  },
  "dependencies": {
    "@clerk/fastify": "^2.6.12",
    "@nestjs/common": "^11.1.10",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.10",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/platform-fastify": "^11.1.10",
    "@repo/nest-clerk": "workspace:*",
    "@repo/nest-language": "workspace:*",
    "@repo/nest-organization": "workspace:*",
    "@repo/nest-organization-membership": "workspace:*",
    "@repo/nest-prisma": "workspace:*",
    "@repo/nest-rabbitmq": "workspace:*",
    "@repo/nest-redis-cache": "workspace:*",
    "@repo/nest-shared": "workspace:*",
    "@repo/nest-user": "workspace:*",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "nest-winston": "^1.10.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.10",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.4",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "rimraf": "^6.1.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
